// Using printf() and scanf() printf("Enter two integers: "); scanf("%d %d", &num1, &num2); 
// Using the arithmetic operator sum = num1 + num2; 
// Displaying result using printf() 
printf("Sum of %d and %d is %d\n", num1, num2, sum); 
// Using getchar() and putchar() 
printf("Enter a character: "); 
getchar(); // To consume the newline character left by scanf() character = getchar(); 
printf("The character entered is: "); 
putchar(character); 
printf("\n"); 
// Using gets() and puts() 
printf("Enter a string: "); 
getchar(); // To consume the newline character left by getchar() gets(str); 
printf("The string entered is: "); 
